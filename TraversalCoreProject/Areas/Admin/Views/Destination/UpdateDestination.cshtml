@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rota Güncelleme</h1>
<form method="post">
    <input type="hidden" asp-for="DestinationID" />
    <div class="form-group">
        <label asp-for="City">Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Time">Zaman</label>
        <input type="text" asp-for="Time" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Price">Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Image">Ana Görsel</label>
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Capacity">Kapasite</label>
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CoverImage">Kapak Görseli</label>
        <input type="text" asp-for="CoverImage" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Image2">Görsel 2</label>
        <input type="text" asp-for="Image2" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DetailsTop">Detay 1</label>
        <textarea cols="30" rows="5" class="form-control" asp-for="DetailsTop">
        </textarea>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DetailsLower">Detay 2</label>
        <textarea cols="30" rows="5" class="form-control" asp-for="DetailsLower">
        </textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-primary">Güncelle</button>
</form>