@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
    var counter = 0;
}
<!doctype html>
<html lang="zxx">
<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Rotalar </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Anasayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
                </ul>
            </div>
        </div>
    </section>
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Destinations</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6 @(counter == 1 ? "mt-md-0" : counter == 2 ? "mt-md-0 mt-4" : counter > 2 ? "mt-lg-5 mt-4" : null)">
                            <div class="column">
                                <a href="blog-single.html"><img src="@item.Image" alt="" class="img-fluid"></a>
                                <div class="info">
                                    <h4><a href="blog-single.html">@item.City</a></h4>
                                    <p>@item.Time</p>
                                    <div class="dst-btm">
                                        <h6 class="">Start From </h6>
                                        <span>@item.Price</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        counter++;
                    }
                </div>
            </div>
        </div>
    </section>
    <link href="~/traversal-liberty/assets/css/style-liberty.css" rel="stylesheet" />
    <script src="~/traversal-liberty/assets/js/bootstrap.min.js"></script>
</body>
</html>